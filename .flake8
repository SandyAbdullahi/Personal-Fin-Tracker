[flake8]
# Don’t lint third-party code or generated files
exclude = .venv, */migrations/*, __pycache__, build, dist, static

# You can live with long lines up to 119 chars (Black’s default)
max-line-length = 119

# “Line too long *again* (B950)” & “W503 break before binary op” are noisy
extend-ignore = B950, W503

# Ignore “imported but unused” in __init__.py files only
per-file-ignores =
    __init__.py: F401
